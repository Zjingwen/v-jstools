{
  "name": "js-tools",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "JS-HOOK工具",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "tabs",
    "debugger",
    "storage",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "devtools_page": "devtools.html",
  "content_scripts": [
    {
      "js": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options.html",
  "options_ui": {
    "open_in_tab": true,
    "page": "options.html"
  }
}
